<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:id="@+id/mainContainer"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:stretchColumns="1">

            <fragment
                android:id="@+id/left"
                android:tag="left"
                android:name="johnwilde.androidchessclock.clock.ClockFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="-1"
                android:scaleY="-1"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <johnwilde.androidchessclock.main.SpinnerView
                    android:id="@+id/spinner"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu_button"
                        style="@style/port_button"
                        android:src="@drawable/ic_tune_black_24dp"/>

                    <ImageView
                        android:id="@+id/reset_button"
                        style="@style/port_button"
                        android:src="@drawable/ic_autorenew_black_24dp"/>

                    <ImageView
                        android:id="@+id/swap_sides"
                        style="@style/port_button"
                        android:src="@drawable/ic_swap_vert_black_24dp"/>

                    <ImageView
                        android:id="@+id/play_pause_button"
                        style="@style/port_button"
                        android:src="@drawable/play_pause"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/back"
                    android:layout_gravity="left"
                    style="@style/port_button"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

                <ImageView
                    android:id="@+id/forward"
                    android:layout_gravity="right"
                    style="@style/port_button"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            </FrameLayout>

            <fragment
                android:id="@+id/right"
                android:tag="right"
                android:name="johnwilde.androidchessclock.clock.ClockFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="1"
                android:scaleY="1"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout>